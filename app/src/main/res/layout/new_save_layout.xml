<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    app:contentPadding="3dp"
    app:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit_grey"
                android:scaleType="centerInside"
                android:background="#fff"
                android:id="@+id/edit_btn_grey"
                android:visibility="visible"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit_black"
                android:scaleType="centerInside"
                android:background="#fff"
                android:id="@+id/edit_btn"
                android:visibility="visible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="center">
            <View
                android:id="@+id/view_left"
                android:layout_width="2dp"
                android:layout_height="90dp"
                android:layout_marginEnd="4dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check_mark_green"
                        android:background="#ffffff"
                        android:id="@+id/save_edit_btn"
                        android:layout_marginEnd="30dp"
                        android:visibility="visible"/>
                    <ImageButton
                        android:id="@+id/delete_new_save_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:layout_marginStart="30dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/x_mark_red"
                        android:visibility="visible" />
                </LinearLayout>
                <TextView
                    android:id="@+id/new_save_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="new save"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:id="@+id/edit_save_et"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_input_2"/>
            </LinearLayout>
            <View
                android:id="@+id/view_right"
                android:layout_width="2dp"
                android:layout_height="90dp"
                android:layout_marginStart="4dp"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/pin_red"
                android:background="#fff"
                android:scaleType="centerInside"
                android:id="@+id/pin_btn"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/pin_8_32"
                android:background="#fff"
                android:scaleType="centerInside"
                android:id="@+id/pin_grey_btn"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>